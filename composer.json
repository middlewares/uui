{
    "name": "middlewares/uuid",
    "type": "library",
    "description": "Middleware to generate an UUID and save it in the X-Uuid header",
    "license": "MIT",
    "keywords": [
        "psr-7",
        "psr-15",
        "middleware",
        "http",
        "uuid"
    ],
    "homepage": "https://github.com/middlewares/uuid",
    "support": {
        "issues": "https://github.com/middlewares/uuid/issues"
    },
    "require": {
        "php": "^5.6 || ^7.0",
        "http-interop/http-middleware": "^0.3",
        "ramsey/uuid": "^3.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.5",
        "zendframework/zend-diactoros": "^1.3",
        "friendsofphp/php-cs-fixer": "^1.12",
        "squizlabs/php_codesniffer": "^2.7",
        "middlewares/utils": "~0.5"
    },
    "autoload": {
        "psr-4": {
            "Middlewares\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Middlewares\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "phpunit",
            "phpcs"
        ],
        "cs-fix": "php-cs-fixer fix . --fixers=-psr0"
    }
}
